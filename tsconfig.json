{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "target": "ES2015",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "composite": true
  },
  "include": ["./common/**/*"],
  "exclude": ["**/node_modules/**", "**/lib/**"],
}
