{
  "name": "@weapp-toolkit/weapp-plugin",
  "version": "1.0.0",
  "description": "miniprogram webpack json loader",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "test": "jest",
    "dev": "rollup -c -w",
    "debug": "ts-node -P ./test/tsconfig.json --cwd-mode --files ./test/index.test.ts",
    "debug:dev": "nodemon --config ./nodemon.json --exec 'TS_NODE_PROJECT=\"./test/tsconfig.json\" webpack -c ./test/webpack.config.ts'",
    "debug:dev-pure": "nodemon --config ./nodemon.json --exec 'ts-node -P ./test/tsconfig.json --cwd-mode --files' ./test/index.test.ts",
    "build": "rimraf lib es && rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weapp-toolkit/weapp-webpack-toolkit.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "wx",
    "wxapp",
    "miniprogram",
    "微信小程序",
    "小程序",
    "app.json"
  ],
  "author": {
    "name": "CryUshio",
    "email": "1151291182@qq.com",
    "url": "https://github.com/CryUshio"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weapp-toolkit/weapp-webpack-toolkit.git/issues"
  },
  "homepage": "https://github.com/weapp-toolkit/weapp-webpack-toolkit.git#readme",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib/index.js",
    "lib/index.d.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "dependencies": {
    "@weapp-toolkit/weapp-types": "^1.0.0",
    "enhanced-resolve": "^5.8.2",
    "fs-extra": "^10.0.0",
    "glob-to-regexp": "^0.4.1",
    "globby": "11",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/glob-to-regexp": "^0.4.1",
    "@types/lodash": "^4.14.171",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  }
}
